        <item name="android:layout_height">@dimen/dimProgressPaginationHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!--Avatar Style-->
    <item name="iv_avatar" type="id" />

    <style name="Avatar">
        <item name="android:layout_width">@dimen/avatar_dimension</item>
        <item name="android:layout_height">@dimen/avatar_dimension</item>
        <item name="android:id">@id/iv_avatar</item>
    </style>

    <style name="Dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="product_parallax" />

    <style name="product_parallax.ToolbarTitleStyle">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/foreground_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="About" />

    <style name="About.ToolbarTitleStyle">
        <item name="android:textColor">@color/about_toolbar_title_text_color</item>
        <item name="android:textSize">@dimen/about_toolbar_text_size</item>
        <item name="android:layout_marginStart">@dimen/about_toolbar_text_start_margin</item>
        <item name="android:paddingBottom">@dimen/about_toolbar_text_bottom_padding</item>
        <item name="android:paddingTop">@dimen/about_toolbar_text_top_padding</item>
    </style>

    <style name="About.TitleTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/about_section_title_height</item>
        <item name="android:background">@color/about_section_title_background_color</item>
        <item name="android:textColor">@color/about_section_title_text_color</item>
        <item name="android:textSize">@dimen/about_section_title_text_size</item>
        <item name="android:paddingStart">@dimen/about_start_padding</item>
        <item name="android:paddingBottom">@dimen/about_section_title_bottom_padding</item>
        <item name="android:paddingTop">@dimen/about_section_title_top_padding</item>
        <item name="android:paddingEnd">@dimen/about_end_padding</item>
    </style>

    <style name="About.EnrichedTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:textColor">@color/about_section_body_text_color</item>
        <item name="android:textSize">@dimen/about_section_body_text_size</item>
        <item name="android:paddingStart">@dimen/about_start_padding</item>
        <item name="android:paddingEnd">@dimen/about_end_padding</item>
        <item name="android:paddingBottom">@dimen/about_section_body_bottom_padding</item>
        <item name="android:paddingTop">@dimen/about_section_body_top_padding</item>
    </style>


