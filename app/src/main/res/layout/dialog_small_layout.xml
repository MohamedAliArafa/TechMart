<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_dialog_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red_join_dialog"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white"
        tools:text="Error" />


    <com.a700apps.techmart.utils.CustomTextView
        android:id="@+id/tv_dialog_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/gray_join_dialog"
        tools:text="this is title" />

    <!--<TextView-->
        <!--android:id="@+id/tv_dialog_question"-->
        <!--style="@style/TextAppearance.AppCompat.Medium"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingRight="20dp"-->
        <!--android:textColor="@color/gray_join_dialog"-->
        <!--tools:text="this is title" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_dialog_cancel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textColor="@color/primary_color" />

        <TextView
            android:id="@+id/tv_dialog_ok"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="ok"
            android:textSize="12sp"
            android:textColor="@color/gray_join_dialog" />
    </LinearLayout>
</LinearLayout>