<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/Register_body_container_padding"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView16" />

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="than 10,500 participants in 2016"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/descriptionTv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/imageView14"
        android:layout_alignStart="@+id/descriptionTv" />

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your request to group xx approved"
        android:textColor="@android:color/white"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imageView14"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/imageView14"
        android:layout_toRightOf="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14"
        android:layout_marginLeft="11dp" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_view"
        android:layout_marginTop="4dp"
        android:layout_above="@+id/messageTv"
        android:layout_toLeftOf="@+id/viewTv"
        android:layout_toStartOf="@+id/viewTv" />

    <TextView
        android:id="@+id/viewTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Group"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/imageView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/messageTv" />
</RelativeLayout>