<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contain"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout11"
        app:layout_constraintTop_toTopOf="@+id/linearLayout11"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/blackGreenColor"
            app:srcCompat="@drawable/ic_share" />

        <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="Share"
            android:textColor="@color/blackGreenColor"
            android:textSize="@dimen/greeting_card_text" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_post"
        android:layout_width="@dimen/item_post_image_width"
        android:layout_height="@dimen/item_post_image_height"

        android:scaleType="fitXY"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img1"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/blackGreenColor"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:textColor="@color/Parallax_text"
        android:textSize="@dimen/time_text"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        app:layout_constraintTop_toTopOf="@+id/iv_post"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/tv_postedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="4dp"
        android:background="@color/blackGreenColor"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:maxLines="1"
        android:paddingRight="4dp"
        android:textColor="@color/Parallax_text"
        android:textSize="@dimen/time_text"
        app:layout_constraintLeft_toRightOf="@+id/tv_group_name"
        app:layout_constraintTop_toTopOf="@+id/tv_group_name"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_poste"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/tv_poste"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:background="@color/red_join_dialog"
        app:layout_constraintLeft_toRightOf="@+id/tv_postedby"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_postedby"
        />


    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:textColor="@color/toolbar_hint_text"
        android:textSize="@dimen/post_card_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_name"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/linearLayout10"
        app:layout_constraintHorizontal_bias="0.093" />

    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="4dp"

        android:textColor="@color/about_row_grey"
        android:textSize="@dimen/greeting_card_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="9dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        android:layout_marginLeft="11dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/view11"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        app:layout_constraintTop_toBottomOf="@+id/iv_post">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:tint="@color/blackGreenColor"
            app:srcCompat="@drawable/ic_like" />

        <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
            android:id="@+id/tv_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text=""
            android:textColor="@color/blackGreenColor"
            android:textSize="@dimen/greeting_card_text"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:tint="@color/blackGreenColor"
            app:srcCompat="@drawable/ic_comment" />

        <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text=""
            android:textColor="@color/blackGreenColor"
            android:textSize="@dimen/greeting_card_text"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"

        app:layout_constraintBottom_toBottomOf="@+id/linearLayout10"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout10"
        app:srcCompat="@drawable/ic_more"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout10"
        android:layout_marginLeft="12dp"
        app:layout_constraintVertical_bias="0.545" />

    <View
        android:id="@+id/view11"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"

        android:background="@color/about_row_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>