<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView29"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Abdul Rahman"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView29"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView68"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Presedent"
        android:textColor="@android:color/white"
        android:textSize="@dimen/time_text"
        app:layout_constraintLeft_toRightOf="@+id/imageView29"
        app:layout_constraintTop_toBottomOf="@+id/textView67"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView67" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="EEG, UAE"
        android:textColor="@android:color/white"
        android:textSize="@dimen/time_text"
        app:layout_constraintLeft_toRightOf="@+id/imageView29"
        app:layout_constraintTop_toBottomOf="@+id/textView68"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView68" />

    <com.a700apps.techmart.utils.CustomButton
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_transparent_rounded_small"
        android:padding="5dp"
        android:text="View Details"
        android:textColor="@android:color/white"
        android:textSize="@dimen/time_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:textAllCaps="false" />
</android.support.constraint.ConstraintLayout>