<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_approve_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginTop="2dp"
        android:src="@drawable/profile_pic" />

    <com.a700apps.techmart.utils.CustomTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin5"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_approve_profile"
        android:layout_toStartOf="@+id/tv_manage"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_approve_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="23-Aug-2017"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_approve_time_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/tv_approve_time"
        android:text="Request On : "
        android:textColor="@color/white"
        android:textSize="9sp" />

    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_approve_status_header"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/tv_approve_time_header"
        android:layout_alignStart="@id/tv_approve_time_header"
        android:layout_alignTop="@+id/tv_approve_status_header"
        android:layout_below="@id/tv_approve_time_header"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Status : "
        android:textColor="@color/white"
        android:textSize="9sp" />

    <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
        android:id="@+id/tv_approve_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_approve_status_header"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/tv_approve_status_header"
        android:background="@color/btn_reject"
        android:padding="@dimen/margin5"
        android:text="Pending"
        android:textColor="@color/white"
        android:textSize="9sp" />


    <RelativeLayout
        android:id="@+id/manageLayout"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_approve_time_header">

        <ImageView
            android:id="@+id/iv_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_centerHorizontal="true"

            android:layout_toStartOf="@id/tv_approve_time_header"
            android:src="@drawable/ic_setting_white" />

        <com.a700apps.techmart.utils.DateTimePicker.CustomLightTextView
            android:id="@+id/tv_manage"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_manage"
            android:layout_marginRight="11dp"
            android:gravity="center"
            android:text="@string/manage_settings"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </RelativeLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    />
</RelativeLayout>